@using System.Collections.Generic;
@using Votr.Models;
@model IEnumerable<Poll>

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Polls</h1>

@foreach (var item in Model)
{
<div class="row">
    <div class="col-md-8 ">
        @item.Title <br/>
        @Html.ActionLink("Edit", "Edit", new { id=@item.PollId})
        @if (User.Identity.IsAuthenticated)
        {
        <button data-toggle="modal" data-target="#modal-@item.PollId">Delete</button>
        <div id="modal-@item.PollId" class="modal fade" role="dialog" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="close" data-dismiss="modal">X</button>
                    </div>
                    <div class="modal-body">
                        @Html.ActionLink("Yes?", "Delete", new { id = @item.PollId }, new { @class = "btn" })
                        <button class="close" data-dismiss="modal">No!</button>
                    </div>
                    <div class="modal-footer"></div>
                </div>
            </div>
        
        </div>
        }
    </div>
    <div class="col-md-2 text-center">
        @item.StartDate <br />
        @item.EndDate
    </div>
    <div class="col-md-2 text-center equal-height">
        <ul>
            <li><button class="action-button">View Results</button></li>
        </ul>
    </div>
</div>
}
@if (User.Identity.IsAuthenticated)
{
<div class="row">
    <div class="col-md-offset-4">
       
            <button>Create a New Poll</button>
       
    </div>
</div>
}
